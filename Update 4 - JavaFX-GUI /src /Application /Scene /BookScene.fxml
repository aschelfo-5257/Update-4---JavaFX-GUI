<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="yourpackage.BookSceneController">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="titleLabel" style="-fx-font-size: 24pt; -fx-font-weight: bold;"/>
            <Label fx:id="authorLabel" style="-fx-font-size: 14pt; -fx-font-style: italic;"/>
        </VBox>
    </top>
    <center>
        <StackPane>
            <TextArea fx:id="contentArea" editable="false" wrapText="true" style="-fx-font-size: 12pt;"/>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="prevButton" text="Previous Page"/>
            <Button fx:id="nextButton" text="Next Page"/>
        </HBox>
    </bottom>
</BorderPane>
